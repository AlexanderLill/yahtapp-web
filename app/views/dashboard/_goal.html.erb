<div class="rounded border border-gray-100 bg-gray-50 p-5">
  <div class="flex flex-row mb-2">
    <div class="flex font-semibold">
      <%= goal.title %>
    </div>
    <div class="ml-auto flex items-center">
      <h4>Streak:</h4>
      <div class="font-semibold ml-1"><%= calculate_streak(@streaks[goal.id]) %></div>
    </div>
  </div>
  <div class="flex flex-row -mx-1">
    <% @streaks[goal.id].each do |occ| %>
      <div class="inline-flex h-4 w-4 rounded-full <%= occ.done? ? 'bg-green-400' : 'bg-gray-200' %> mx-1">
      </div>
    <% end %>
  </div>
</div>