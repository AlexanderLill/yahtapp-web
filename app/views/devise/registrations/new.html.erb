<%= render "devise/shared/devise_template", title: "Sign up" do %>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "space-y-6"}) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %>
      <div class="mt-1">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </div>

    <div class="field">
      <%= f.label :password %>
      <div class="mt-1">
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
      <% if @minimum_password_length %>
        <p class="mt-2 text-sm text-gray-500" id="email-description">(<%= @minimum_password_length %> characters minimum)</p>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %>
      <div class="mt-1">
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: "btn btn-primary w-full" %>
    </div>
    <div class="border-t border-gray-100 pt-4">
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
<% end %>