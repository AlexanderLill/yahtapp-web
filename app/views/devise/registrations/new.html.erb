<%= render "devise/shared/devise_template", title: "Sign up" do %>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "space-y-6"}) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %>
      <div class="mt-1">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </div>

    <div class="field">
      <%= f.label :username %>
      <div class="mt-1">
        <%= f.text_field :username, autocomplete: "username" %>
      </div>
    </div>

    <div class="field">
      <%= f.label :password %>
      <div class="mt-1">
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
      <% if @minimum_password_length %>
        <p class="mt-2 text-sm text-gray-500">(<%= @minimum_password_length %> characters minimum)</p>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %>
      <div class="mt-1">
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    </div>
    <div class="field">
      <div class="flex items-center -mt-2">
        <%= f.check_box :study_agreement %>
        <%= f.label :study_agreement, class: "ml-3 mt-1" do %>
          I have read and agree to the <%= link_to("Study Terms", consent_path, class: "underline", target: "_blank") %>.
        <% end %>
      </div>
    </div>

    <div class="rounded-md bg-gray-100 border border-gray-200 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <i class="far fa-info-circle h-5 w-5 text-gray-400"></i>
        </div>
        <div class="ml-3 flex-1 md:flex md:justify-between">
          <p class="text-sm text-gray-700">
            We're currently running a <%= link_to("study", consent_path, class: "underline", target: "_blank") %> to evaluate yaht. Signing up is only possible, if you agree to participate in it.
          </p>
        </div>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: "btn btn-primary w-full" %>
    </div>
    <div class="border-t border-gray-100 pt-4">
      <div class="text-gray-400">
        Already have an account?
      </div>
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
<% end %>