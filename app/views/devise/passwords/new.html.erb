<%= render "devise/shared/devise_template", title: "Forgot your password?" do %>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "space-y-6" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %>
      <div class="mt-1">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "Send password reset link", class: "btn btn-primary w-full" %>
    </div>
      <div class="border-t border-gray-100 pt-4">
        <%= render "devise/shared/links" %>
      </div>
  <% end %>

<% end %>