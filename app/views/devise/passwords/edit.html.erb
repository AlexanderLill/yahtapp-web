<%= render "devise/shared/devise_template", title: "Change your password" do %>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field">
      <%= f.label :password, "New password" %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <p class="mt-2 text-sm text-gray-500" id="email-description">(<%= @minimum_password_length %> characters minimum)</p>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "Confirm new password" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
    <div class="actions">
      <%= f.submit "Change my password" %>
    </div>
      <div class="border-t border-gray-100 pt-4">
        <%= render "devise/shared/links" %>
      </div>
  <% end %>
<% end %>