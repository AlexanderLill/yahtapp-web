
<%

  enabled_btn_css = "flex focus-visible:ring-2 focus-visible:ring-gray-900 focus-visible:ring-offset-2 rounded-md focus:outline-none focus-visible:ring-offset-gray-100";
  enabled_text_css = ""

%>

<div class="group p-0.5 rounded-lg flex bg-gray-100 hover:bg-gray-200 mr-4">

  <% if habit.is_enabled %>
    <div class="flex focus-visible:ring-2 focus-visible:ring-gray-900 focus-visible:ring-offset-2 rounded-md focus:outline-none focus-visible:ring-offset-gray-100">
      <span class="p-2 rounded-md flex items-center text-sm font-medium bg-white shadow-sm ring-1 ring-black ring-opacity-5" >
        <i class="far fa-eye mr-1"></i>
        <span class="sr-only lg:not-sr-only text-gray-900">Enabled</span>
      </span>
    </div>
    <%= link_to disable_habit_url(habit), method: :post, class: "ml-0.5 p-1.5 lg:pl-2.5 lg:pr-3.5 rounded-md flex items-center text-sm text-gray-600 font-medium focus-visible:ring-2 focus-visible:ring-teal-500 focus-visible:ring-offset-2 focus:outline-none focus-visible:ring-offset-gray-100" do %>
      <i class="far fa-eye-slash mr-1"></i>
      <span class="sr-only lg:not-sr-only text-gray-600 hover:text-gray-900">Disable</span>
    <% end %>
  <% else %>
    <%= link_to enable_habit_url(habit), method: :post, class: "ml-0.5 p-1.5 lg:pl-2.5 lg:pr-3.5 rounded-md flex items-center text-sm text-gray-600 font-medium focus-visible:ring-2 focus-visible:ring-teal-500 focus-visible:ring-offset-2 focus:outline-none focus-visible:ring-offset-gray-100" do %>
      <i class="far fa-eye mr-1"></i>
      <span class="sr-only lg:not-sr-only text-gray-600 hover:text-gray-900">Enable</span>
    <% end %>
    <div class="flex focus-visible:ring-2 focus-visible:ring-gray-900 focus-visible:ring-offset-2 rounded-md focus:outline-none focus-visible:ring-offset-gray-100">
      <span class="p-2 rounded-md flex items-center text-sm font-medium bg-white shadow-sm ring-1 ring-black ring-opacity-5" >
        <i class="far fa-eye-slash mr-1"></i>
        <span class="sr-only lg:not-sr-only text-gray-900">Disabled</span>
      </span>
    </div>
  <% end %>


</div>