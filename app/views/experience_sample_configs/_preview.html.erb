<div class="bg-gray-200 px-4 py-8 rounded-lg">
  <div class="mx-auto max-w-md w-full bg-white shadow-lg rounded-lg pointer-events-auto flex flex-col ring-1 ring-black ring-opacity-5">
    <div class="flex justify-between items-center w-full pointer-events-auto px-2 py-1 bg-gray-100 text-gray-500 text-xs rounded-t-lg">
      <div class="inline-flex items-center">
        <%= image_tag "yaht-icon.png", class: "inline w-5 h-5 mr-1", alt: "yaht - yet another habit tracker" %>
        Self-Report: <%= sampling.title %>
      </div>
      <div><%= Time.now.strftime("%H:%M") %></div>
    </div>
    <div class="w-full pointer-events-auto flex flex-row">
      <div class="w-0 flex-1 p-4 pt-1">
        <div class="flex items-start">
          <div class="w-0 flex-1">
            <p class="font-medium text-gray-900">
              <%= sampling.prompt %>
            </p>
            <div class="flex flex-row justify-between mt-2 -mx-2">
              <% sampling.scale_steps.times do |index| %>
                <div class="mx-1 flex w-8 h-8 bg-gray-100 text-center items-center text-gray-500 align-middle rounded-md border border-gray-200 hover:bg-gray-700 hover:text-white focus:outline-none focus:ring-2 focus:ring-gray-900 cursor-pointer transition-all">
                  <span class="flex mx-auto font-medium">
                    <%= index %>
                  </span>
                </div>
              <% end %>
            </div>
            <div class="flex flex-row text-gray-400 text-sm mt-1">
              <div class="">
                <%= sampling.scale_label_start %>
              </div>
              <div class="mx-auto">
                <%= sampling.scale_label_center %>
              </div>
              <div class="">
                <%= sampling.scale_label_end %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div
        class="flex border-l border-gray-200 cursor-pointer"
      >
        <div
          class="w-full border border-transparent rounded-none rounded-r-lg p-4 flex items-center justify-center text-sm font-medium text-gray-600 hover:text-gray-900 focus:outline-none"
        >
          Skip
        </div>
      </div>
    </div>
  </div>
</div>