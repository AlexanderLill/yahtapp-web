<%= render 'shared/page_heading', title: "Samplings", description: "Samplings help you to continuously monitor and self-report important metrics to track your progress over time." do %>
  <%= link_to 'New Sampling', new_habit_path, class: "btn btn-primary flex whitespace-nowrap" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Prompt</th>
      <th>Scale steps</th>
      <th>Scale label start</th>
      <th>Scale label center</th>
      <th>Scale label end</th>
      <th>Schedule</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @experience_sample_configs.each do |experience_sample_config| %>
      <tr>
        <td><%= experience_sample_config.title %></td>
        <td><%= experience_sample_config.prompt %></td>
        <td><%= experience_sample_config.scale_steps %></td>
        <td><%= experience_sample_config.scale_label_start %></td>
        <td><%= experience_sample_config.scale_label_center %></td>
        <td><%= experience_sample_config.scale_label_end %></td>
        <td><%= experience_sample_config.schedule %></td>
        <td><%= experience_sample_config.user_id %></td>
        <td><%= link_to 'Show', experience_sample_config %></td>
        <td><%= link_to 'Edit', edit_experience_sample_config_path(experience_sample_config) %></td>
        <td><%= link_to 'Destroy', experience_sample_config, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
