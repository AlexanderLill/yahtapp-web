<li>
  <a href="<%= edit_goal_url(goal) %>" class="flex flex-row hover:bg-gray-50">
    <div class="flex-none w-1 mr-1 <%= color_bg_class(goal.color) %>"></div>
    <div class="flex flex-grow flex-col px-4 py-4">
      <div class="flex items-center justify-between">
        <div class="">
          <p class="text-sm font-medium text-gray-900 truncate">
            <%= goal.title %>
          </p>
          <% if goal.description.present? %>
            <p class="text-sm text-gray-800 truncate">
              <%= goal.description %>
            </p>
          <% end %>
        </div>
        <div class="ml-2 flex-shrink-0 flex">
          <% if goal.is_template %>
            <p class="ml-2 px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
              Template
            </p>
          <% end %>
        </div>
      </div>
      <div class="mt-2 sm:flex sm:justify-between">
        <div class="sm:flex">
          <p class="mt-2 flex items-center text-sm text-gray-500 sm:mt-0">
            <i class="far fa-user mr-2"></i>
            <%= goal.user.username %>
          </p>
        </div>
        <div class="sm:flex">
          <% if goal.template %>
            <div class="mt-2 flex items-center text-sm text-gray-500 sm:mt-0">
              <i class="far fa-copy mr-2"></i>
              <%= goal.template ? goal.template.title : '-' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </a>
</li>